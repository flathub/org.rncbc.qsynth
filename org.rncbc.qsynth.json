{
  "app-id": "org.rncbc.qsynth",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.10",
  "sdk": "org.kde.Sdk",
  "command": "qsynth",
  "finish-args": [
    /* X11 + XShm access */
    "--share=ipc",
    "--socket=wayland",
    "--socket=fallback-x11",
    /* Note playback */
    "--socket=pulseaudio",
    /* MIDI */
    "--device=all",
    /* JACK */
    "--filesystem=xdg-run/pipewire-0",
    /* Allow loading, saving files from anywhere (portals donâ€™t work yet) */
    "--filesystem=home",
    /* Allow other instances to see lockfiles */
    "--env=TMPDIR=/var/tmp",
    /* On SuSE it seems to be necessary for sound to work */
    "--env=ALSA_CONFIG_PATH=",
    /* Allow KDE Plasma tray icon to work */
    "--talk-name=org.kde.StatusNotifierWatcher"
  ],
  "cleanup": [
    "/share/man",
    "/share/doc",
    "*.la"
  ],
  "modules": [
    "shared-modules/linux-audio/libinstpatch.json",
    "shared-modules/linux-audio/fluidsynth2.json",
    {
      "name": "qsynth",
      "buildsystem": "cmake-ninja",
      "sources": [
        {
          "type":   "archive",
          "url":    "https://downloads.sourceforge.net/qsynth/qsynth-1.0.4.tar.gz",
          "sha256": "9cfd3cfd5ce57f459549a3e1091806ab2febb0544a1f43897e29ef9f1eed6f0c"
        }
      ]
    }
  ]
}
