{
  "app-id": "org.rncbc.qsynth",
  "runtime": "org.kde.Platform",
  "runtime-version": "6.6",
  "sdk": "org.kde.Sdk",
  "command": "qsynth",
  "finish-args": [
    /* X11 + XShm access */
    "--share=ipc",
    "--socket=wayland",
    "--socket=fallback-x11",
    /* Note playback */
    "--socket=pulseaudio",
    /* MIDI */
    "--device=all",
    /* JACK */
    "--filesystem=xdg-run/pipewire-0",
    /* Allow loading, saving files from anywhere (portals donâ€™t work yet) */
    "--filesystem=home",
    /* Allow other instances to see lockfiles */
    "--env=TMPDIR=/var/tmp",
    /* On SuSE it seems to be necessary for sound to work */
    "--env=ALSA_CONFIG_PATH="
  ],
  "cleanup": [
    "/share/man",
    "/share/doc",
    "*.la"
  ],
  "modules": [
    "shared-modules/linux-audio/libinstpatch.json",
    "shared-modules/linux-audio/fluidsynth2.json",
    {
      "name": "qsynth",
      "buildsystem": "cmake-ninja",
      "config-opts": [ "-DCONFIG_WAYLAND=ON" ],
      "sources": [
        {
          "type":   "archive",
          "url":    "https://downloads.sourceforge.net/project/qsynth/qsynth/0.9.90/qsynth-0.9.90.tar.gz",
          "sha256": "e65aa6a1492ee3ff282b19508a8d6726d32ed649f8da22bc9a2d0adecf72ef43"
        }
      ]
    }
  ]
}
